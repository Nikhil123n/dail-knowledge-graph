# Neo4j graph database connection
# Default matches the docker-compose.yml service configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=dail_password

# Google Gemini API key — required for entity extraction, NL search, and wave narratives
# Get a free key at: https://aistudio.google.com/apikey
GEMINI_API_KEY=YOUR_GEMINI_KEY_HERE

# CourtListener REST API base URL — used for live case ingestion (weekly scheduler)
COURTLISTENER_BASE_URL=https://www.courtlistener.com

# Frontend Vite dev server — tells the React app where the backend lives
VITE_API_URL=http://localhost:8000
